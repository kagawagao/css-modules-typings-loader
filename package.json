{
  "name": "@opd/css-modules-typings-loader",
  "version": "1.0.0",
  "description": "css modules typings loader for webpack",
  "main": "lib/index.js",
  "dependencies": {
    "acorn": "^7.4.0",
    "acorn-walk": "^7.2.0",
    "prettier": "^2.0.5"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@opd/babel-preset-lib": "^1.5.0",
    "@opd/eslint-config-pangu": "^1.5.0",
    "@opd/jest-preset-pangu": "^1.5.0",
    "@opd/prettier-config-pangu": "^1.2.0",
    "@types/loader-runner": "^2.2.3",
    "@types/webpack": "^4.41.21",
    "cross-env": "^7.0.2",
    "css-loader": "^4.2.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "memfs": "^3.2.0",
    "regenerator-runtime": "^0.13.7",
    "typescript": "^3.9.7",
    "webpack": "^4.44.1"
